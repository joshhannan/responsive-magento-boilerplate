	if( $this->getResultCount() ) :
		echo $this->getMessagesBlock()->toHtml();
?>
		<div class="page-title">
<?php
		if( $this->helper('rss/catalog')->getTagFeedUrl() ) :
?>
			<a href="<?php echo $this->helper('rss/catalog')->getTagFeedUrl() ?>" class="nobr link-rss"><?php echo $this->__('Subscribe to Feed') ?></a>
<?php
		endif;
?>
			<h1><?php echo ($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()) ?></h1>
		</div><!--/page-title-->
<?php
		if( $messages = $this->getNoteMessages() ) :
?>
		<p class="note-msg">
<?php
			foreach( $messages as $message ) :
				echo $message . '<br />';
			endforeach;
?>
		</p>
<?php
		endif;
		echo $this->getProductListHtml();
	else :
?>
		<div class="page-title">
			<h1><?php echo ($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()) ?></h1>
		</div><!--/page-title-->
		<p class="note-msg">
<?php
		echo ( $this->getNoResultText() ) ? $this->getNoResultText() : $this->__('Your search returns no results.');
		echo $this->getAdditionalHtml();
		if( $messages = $this->getNoteMessages() ) :
			foreach( $messages as $message ) :
				echo '<br />' . $message;
			endforeach;
		endif;
?>
		</p><!--/note-msg-->
<?php
	endif;
?>